<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="essential">
		<field name="diseasecategory_id"
			type="hidden"
			label="COM_COSTBENEFITPROJECTION_FIELD_ID_LABEL"
			description="JGLOBAL_FIELD_ID_DESC"
			size="10"
			default="0"
			readonly="true"
			class="readonly"
		/>
		
		<field name="created_by"
			type="hidden"
			label="null"
			description="null"
			readonly="true"
			class="readonly"
		/>
		<field name="created_on"
			type="hidden"
			label="null"
			description="null"
			readonly="true"
			class="readonly"
		/>
		
		<field name="modified_by"
			type="hidden"
			label="null"
			description="null"
			readonly="true"
			class="readonly"
		/>
		<field name="modified_on"
			type="hidden"
			label="null"
			description="null"
			readonly="true"
			class="readonly"
		/>

		<field name="diseasecategory_name"
			type="text"
			label="COM_COSTBENEFITPROJECTION_FIELD_DISEASECATEGORY_NAME_LABEL"
			description="COM_COSTBENEFITPROJECTION_FIELD_DISEASECATEGORY_NAME_DESC"
			class="inputbox"
			size="30"
			required="true"
		/>

		<field name="diseasecategory_alias"
			type="text"
			label="JFIELD_ALIAS_LABEL"
			description="JFIELD_ALIAS_DESC"
			size="30"
			required="false"
		 />
	</fieldset>

	<fieldset name="editor">
		<field name="diseasecategory_description"
			type="textarea"
			label="COM_COSTBENEFITPROJECTION_FIELD_DISEASECATEGORY_DESCRIPTION_LABEL"
			description="COM_COSTBENEFITPROJECTION_FIELD_DISEASECATEGORY_DESCRIPTION_DESC"
			filter="safehtml"
			class="inputbox"
			rows="10" 
			cols="5"
		/>
	</fieldset>

	<fieldset name="optional">
		<field name="published"
			type="list"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC"
			class="inputbox"
			filter="intval"
			size="1"
			default="1"
		>
			<option value="1">
				JPUBLISHED</option>
			<option value="0">
				JUNPUBLISHED</option>
		</field>

		<field name="diseasecategory_access"
			type="accesslevel"
			label="JFIELD_ACCESS_LABEL"
			description="JFIELD_ACCESS_DESC"
			default="1"
			required="false"
		 />
	</fieldset>
</form>
