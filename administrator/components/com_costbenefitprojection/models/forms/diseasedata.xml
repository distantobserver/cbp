	<fieldset name="basic">
		<field name="id"
			type="hidden"
			label="COM_COSTBENEFITPROJECTION_FIELD_ID_LABEL"
			description="JGLOBAL_FIELD_ID_DESC"
			size="10"
			default="0"
			readonly="true"
			class="readonly"
		/>

		<field name="disease_id"
			type="diseases"
			label="COM_COSTBENEFITPROJECTION_FIELD_DISEASE_NAME_LABEL"
			description="COM_COSTBENEFITPROJECTION_FIELD_DISEASE_NAME_DESC"
			required="true"
		/>
		
		<field name="access"
			type="accesslevel"
			label="JFIELD_ACCESS_LABEL"
			description="JFIELD_ACCESS_DESC"
			default="2"
			required="false"
		 />
		 
		 <field name="published"
			type="list"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC"
			class="inputbox"
			filter="intval"
			size="1"
			default="1"
		>
			<option value="2">
				JCLIENTD</option>
			<option value="-2">
				JREJECTED</option>
			<option value="1">
				JPUBLISHED</option>
			<option value="0">
				JUNPUBLISHED</option>
		</field>
		<field name="owner"
			type="owner"
			label="COM_COSTBENEFITPROJECTION_FIELD_OWNER_LABEL"
			description="COM_COSTBENEFITPROJECTION_FIELD_OWNER_DESC"
			required="true"
		/>
		<field name="country"
			type="hidden"
			label=" "
			description=" "
			readonly="true"
			class="readonly"
		/>
		<field name="created_by"
			type="hidden"
			label="COM_COSTBENEFITPROJECTION_FIELD_CREATEDBY_LABEL"
			description="COM_COSTBENEFITPROJECTION_FIELD_CREATEDBY_DESC"
			readonly="true"
			class="readonly"
		/>
		<field name="created_on"
			type="hidden"
			label="COM_COSTBENEFITPROJECTION_FIELD_CREATEDON_LABEL"
			description="COM_COSTBENEFITPROJECTION_FIELD_CREATEDON_DESC"
			readonly="true"
			class="readonly"
		/>
		
		<field name="modified_by"
			type="hidden"
