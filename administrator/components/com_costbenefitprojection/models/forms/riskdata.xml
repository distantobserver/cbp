<?xml version="1.0" encoding="utf-8"?>
<form
        addrulepath="/administrator/components/com_costbenefitprojection/models/rules"
>
	<fieldset name="basic">
		<field name="id"
			type="hidden"
			label="COM_COSTBENEFITPROJECTION_FIELD_ID_LABEL"
			description="JGLOBAL_FIELD_ID_DESC"
			size="10"
			default="0"
			readonly="true"
			class="readonly"
		/>

		<field name="risk_id"
			type="risks"
			label="COM_COSTBENEFITPROJECTION_FIELD_RISK_NAME_LABEL"
			description="COM_COSTBENEFITPROJECTION_FIELD_RISK_NAME_DESC"
			required="true"
		/>
		 
		<field name="access"
			type="accesslevel"
			label="JFIELD_ACCESS_LABEL"
			description="JFIELD_ACCESS_DESC"
			default="2"
			required="false"
		 />
		 
		 <field name="published"
			type="list"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC"
			class="inputbox"
			filter="intval"
			size="1"
			default="1"
		>
			<option value="2">
				JCLIENTD</option>
			<option value="-2">
				JREJECTED</option>
			<option value="1">
				JPUBLISHED</option>
			<option value="0">
				JUNPUBLISHED</option>
		</field>
		
		<field name="owner"
			type="owner"
			label="COM_COSTBENEFITPROJECTION_FIELD_OWNER_LABEL"
			description="COM_COSTBENEFITPROJECTION_FIELD_OWNER_DESC"
			required="true"
		/>
		
		<field name="country"
			type="hidden"
			readonly="true"
			class="readonly"
		/>
		
		<field name="created_by"
			type="hidden"
			label="COM_COSTBENEFITPROJECTION_FIELD_CREATEDBY_LABEL"
			description="COM_COSTBENEFITPROJECTION_FIELD_CREATEDBY_DESC"
			readonly="true"
			class="readonly"
		/>
		<field name="created_on"
			type="hidden"
			label="COM_COSTBENEFITPROJECTION_FIELD_CREATEDON_LABEL"
			description="COM_COSTBENEFITPROJECTION_FIELD_CREATEDON_DESC"
			readonly="true"
			class="readonly"
		/>
		
		<field name="modified_by"
			type="hidden"
			label="COM_COSTBENEFITPROJECTION_FIELD_MODIFIEDBY_LABEL"
			description="COM_COSTBENEFITPROJECTION_FIELD_MODIFIEDBY_DESC"
			readonly="true"
			class="readonly"
		/>
		<field name="modified_on"
			type="hidden"
			label="COM_COSTBENEFITPROJECTION_FIELD_MODIFIEDON_LABEL"
			description="COM_COSTBENEFITPROJECTION_FIELD_MODIFIEDON_DESC"
			readonly="true"
			class="readonly"
		/>
	</fieldset>
	
	<fieldset name="details">
		
		<field name="prevalence_male" 
			type="text"
			label="COM_COSTBENEFITPROJECTION_FIELD_RISK_PM_LABEL" 
			description="COM_COSTBENEFITPROJECTION_FIELD_RISK_PM_DESC" 
			size="10"
			required="true"
			class="inputbox validate-ntp"
            validate="ntp"
		/>
		
		<field name="prevalence_female" 
			type="text" 
			label="COM_COSTBENEFITPROJECTION_FIELD_RISK_PF_LABEL" 
			description="COM_COSTBENEFITPROJECTION_FIELD_RISK_PF_DESC" 
			size="10"
			required="true"
			class="inputbox validate-ntp"
            validate="ntp"
		/>
		
		<field name="annual_unproductive_male" 
			type="text"
			label="COM_COSTBENEFITPROJECTION_FIELD_RISK_AUDM_LABEL" 
			description="COM_COSTBENEFITPROJECTION_FIELD_RISK_AUDM_DESC" 
			size="10"
			required="true"
			class="inputbox validate-np"
            validate="ntp" 
		/>
		
		<field name="annual_unproductive_female" 
			type="text"
			label="COM_COSTBENEFITPROJECTION_FIELD_RISK_AUDF_LABEL" 
			description="COM_COSTBENEFITPROJECTION_FIELD_RISK_AUDF_DESC" 
			size="10"
			required="true"
			class="inputbox validate-np"
            validate="ntp" 
		/>
		
		<field name="annual_unproductive_reference"
			type="text"
			label="COM_COSTBENEFITPROJECTION_FIELD_RISK_AUDR_LABEL"
			description="COM_COSTBENEFITPROJECTION_FIELD_RISK_AUDR_DESC"
			size="30"
			required="true"
		/>
		
		<field name="prevalence_scaling_factor_male" 
			type="text" 
			label="COM_COSTBENEFITPROJECTION_FIELD_RISK_RFPM_LABEL" 
			description="COM_COSTBENEFITPROJECTION_FIELD_RISK_RFPM_DESC" 
			size="10"
			required="true"
			class="inputbox validate-np"
            validate="np"
		/>
		
		<field name="prevalence_scaling_factor_female" 
			type="text" 
			label="COM_COSTBENEFITPROJECTION_FIELD_RISK_RFPF_LABEL" 
			description="COM_COSTBENEFITPROJECTION_FIELD_RISK_RFPF_DESC" 
			size="10"
			required="true"
			class="inputbox validate-np"
            validate="np"
		/>
		
		<field name="unproductive_scaling_factor_male" 
			type="text" 
			label="COM_COSTBENEFITPROJECTION_FIELD_RISK_USFM_LABEL" 
			description="COM_COSTBENEFITPROJECTION_FIELD_RISK_USFM_DESC" 
			size="10"
			required="true"
			class="inputbox validate-np"
            validate="np"
		/>
		
		<field name="unproductive_scaling_factor_female" 
			type="text" 
			label="COM_COSTBENEFITPROJECTION_FIELD_RISK_USFF_LABEL" 
			description="COM_COSTBENEFITPROJECTION_FIELD_RISK_USFF_DESC" 
			size="10"
			required="true"
			class="inputbox validate-np"
            validate="np"
		/>

	</fieldset>
</form>