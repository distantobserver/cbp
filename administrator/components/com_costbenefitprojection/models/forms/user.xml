<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="user_details">
		<field name="name" type="text"
			class="inputbox"
			description="COM_COSTBENEFITPROJECTION_USER_FIELD_NAME_DESC"
			label="COM_COSTBENEFITPROJECTION_USER_FIELD_NAME_LABEL"
			required="true"
			size="30"
		/>

		<field name="username" type="text"
			class="inputbox"
			description="COM_COSTBENEFITPROJECTION_USER_FIELD_USERNAME_DESC"
			label="COM_COSTBENEFITPROJECTION_USER_FIELD_USERNAME_LABEL"
			required="true"
			size="30"
		/>

		<field name="password" type="password"
			autocomplete="off"
			class="inputbox validate-password"
			description="COM_COSTBENEFITPROJECTION_USER_FIELD_PASSWORD_DESC"
			filter="raw"
			label="JGLOBAL_PASSWORD"
			size="30"
		/>

		<field name="password2" type="password"
			autocomplete="off"
			class="inputbox validate-password"
			description="COM_COSTBENEFITPROJECTION_USER_FIELD_PASSWORD2_DESC"
			filter="raw"
			label="COM_COSTBENEFITPROJECTION_USER_FIELD_PASSWORD2_LABEL"
			size="30"
			validate="equals"
			field="password2"
		/>

		<field name="email" type="email"
			class="inputbox"
			description="COM_COSTBENEFITPROJECTION_USER_FIELD_EMAIL_DESC"
			label="JGLOBAL_EMAIL"
			required="true"
			size="30"
			validate="email"
		/>
		
		<field name="Ugroups" type="ugroups"
			label="COM_COSTBENEFITPROJECTION_USER_FIELD_MEMBER_DEPARTMENTS_LABEL"
			description="COM_COSTBENEFITPROJECTION_USER_FIELD_MEMBER_DEPARTMENTS_DESC"
			required="true"
		/>

		<field
			name="registerDate"
			type="calendar"
			class="readonly"
			label="COM_COSTBENEFITPROJECTION_USER_FIELD_REGISTERDATE_LABEL"
			description="COM_COSTBENEFITPROJECTION_USER_FIELD_REGISTERDATE_DESC"
			readonly="true"
			format="%Y-%m-%d %H:%M:%S"
			size="22"
			filter="user_utc"
		/>

		<field
			name="lastvisitDate"
			type="calendar"
			class="readonly"
			label="COM_COSTBENEFITPROJECTION_USER_FIELD_LASTVISIT_LABEL"
			description="COM_COSTBENEFITPROJECTION_USER_FIELD_LASTVISIT_DESC"
			readonly="true"
			format="%Y-%m-%d %H:%M:%S"
			size="22"
			filter="user_utc"
		/>
		<field
				name="block"
				type="radio"
				default="0"
				label="COM_COSTBENEFITPROJECTION_USER_FIELD_BLOCK_LABEL"
				description="COM_COSTBENEFITPROJECTION_USER_FIELD_BLOCK_DESC">
				<option
					value="0">JNO</option>
				<option
					value="1">JYES</option>
		</field>

		<field
			name="id"
			type="text"
			class="readonly"
			label="COM_COSTBENEFITPROJECTION_FIELD_ID_LABEL"
			description ="JGLOBAL_FIELD_ID_DESC"
			default="0"
			readonly="true"
			/>

	</fieldset>

	<fields name="params">

		<!--  Basic user account settings. -->
		<fieldset name="settings" label="COM_COSTBENEFITPROJECTION_SETTINGS_FIELDSET_LABEL">
			
		</fieldset>
	</fields>
</form>